

<div class="body">
    <div class="container">

        <p id="notice"></p>


      	<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<h1>Editing Book</h1>
		 
				<% if @book.errors.any? %>
		      		<div class = "alert alert-warning">
		            <h2><%= @book.errors.full_messages.count %>error prohibited this obj from being saved</h2>
		            <ul>
		              <% @book.errors.full_messages.each do |message| %>
		                  <li><%= message %></li>
		              <% end %>
		            </ul>
		      		</div>
		  		<% end %>

		  <%= form_for(@book) do |f| %>
			  <div class="field row">
			    <label for="book_title">Title</label>
			    <div class="book_title">
			    	<%= f.text_field :title, :size=>"81"%>
			    </div>
			  </div>

			  <div class="field row">
			    <label for="book_opinion">Opinion</label>
			    <div class="book-opinion">
			    	<%= f.text_area :body, :size=>"80x2" %>
			    </div>
			  </div>

			  <div class="actions row">
			  	<%= f.submit "Update  Book", class: "btn btn-primary btn-lg btn-block" %>
			    <button type="submit" class="btn btn-primary btn-lg btn-block">Update Book</button>
			  </div>
				<%= link_to 'Show',book_path(@book) %> |
				<%= link_to 'Back',books_path %>
		    </div>
		  <% end %>
		    <div class="col-md-3"></div>
		</div>
    </div>
</div>

